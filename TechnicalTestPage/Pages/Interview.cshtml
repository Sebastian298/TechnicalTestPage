@page
@model TechnicalTestPage.Pages.InterviewModel
@{
}
@section Styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            Registrar entrevista
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-4 col-lg-4">
                                    <label for="selectVacancy" class="form-label">Vacante</label>
                                    <select class="form-select" id="selectVacancy">
                                    </select>
                                </div>
                                <div class="col-sm-12 col-md-4 col-lg-4">
                                    <label for="selectProspect" class="form-label">Candidato</label>
                                    <select class="form-select" id="selectProspect">
                                    </select>
                                </div>
                                <hr />
                            </div>
                            <div class="row mt-5">
                                <div class="col-sm-12 col-md-4 col-lg-4">
                                    <label for="inputNotes" class="form-label">Notas</label>
                                    <textarea class="form-control" id="inputNotes" rows="4" style="resize: none;"></textarea>
                                </div>
                                <div class="col-sm-12 col-md-4 col-md-4">
                                    <label for="inputDateInterview" class="form-label">Fecha entrevista</label>
                                    <input type="datetime-local" id="inputDateInterview" class="form-control" required>
                                </div>
                            </div>
                            <hr />
                            <div class="row mt-2">
                                <div class="col-sm-12 col-md-4 col-lg-4">
                                    <button type="button" class="btn btn-primary" id="btnRegister">Registrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row mt-5">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <table class="table table-striped table-hover table-loader" style="width:100%" id="tableData"></table>
        </div>
    </div>
</div>
<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar entrevista</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-6">
                        <label for="inputDateInterviewEdit" class="form-label">Fecha entrevista</label>
                        <input type="datetime-local" id="inputDateInterviewEdit" class="form-control">
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <label for="inputNotesEdit" class="form-label">Notas</label>
                        <textarea class="form-control" id="inputNotesEdit" rows="4" style="resize: none;"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-lg-4">
                        <label for="selectRecruitedEdit" class="form-label">Reclutado</label>
                        <select class="form-select" id="selectRecruitedEdit">
                            <option value="true">true</option>
                            <option value="false">false</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSaveEdit">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/modules/interview/interview.js" type="module" asp-append-version="true"></script>
}